{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "backend",
      "root": "/backend",
      "build": {
        "buildCommand": "npm ci && npm run build"
      },
      "deploy": {
        "startCommand": "npm run start:prod"
      }
    },
    {
      "name": "frontend",
      "root": "/frontend",
      "build": {
        "buildCommand": "npm ci && npm run build"
      },
      "deploy": {
        "startCommand": "npx serve -s build -l 3000"
      }
    }
  ]
}